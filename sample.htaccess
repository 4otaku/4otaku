AddDefaultCharset UTF-8
php_value memory_limit 512M
php_flag short_open_tag on

<IfModule mod_rewrite.c>
	RewriteEngine On
	RewriteBase /
	RewriteRule ^.*\.css(?=$|&ver=\d+$) /templates/minify/?b=templates/css&f=$0 [NE,NC,L]
	RewriteRule ^.*\.js(?=$|&ver=\d+$) /templates/minify/?b=templates/javascript&f=$0 [NE,NC,L]
	RewriteRule ^i/(.+) /templates/images/$1 [NE,NC,L]	
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteRule ^ /engine/run.php [NE,L]
</IfModule>
